<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
    <name>STOMT Feedback</name>
    <author>STOMT.com</author>
    <creationDate>FEB 2018</creationDate>
    <copyright>Copyright (C) 2018 stomt.com</copyright>
    <license> GNU/GPLv3 https://www.gnu.org/licenses/gpl-3.0.html</license>
    <authorEmail>contact@stomt.com</authorEmail>
    <authorUrl>https://www.stomt.com</authorUrl>
    <version>1.0.0</version>
    <releaseDate>2018-02-16</releaseDate>
    <description>STOMT_XML_DESCRIPTION</description>

    <files>
            <filename plugin="stomt_feedback">stomt_feedback.php</filename>
            <filename>index.html</filename>
            <filename>language/en-GB.plg_system_Stomt.sys.ini</filename>
        <filename>language/de-DE.plg_system_Stomt.sys.ini</filename>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB.plg_system_Stomt.ini</language>
        <language tag="en-GB">language/en-GB.plg_system_Stomt.sys.ini</language>
        <language tag="de-DE">language/de-DE.plg_system_Stomt.ini</language>
          <language tag="de-DE">language/de-DE.plg_system_Stomt.sys.ini</language>
    </languages>

       <config>
        <fields name="params">
            <fieldset name="Basic">

                <field
                    name="note"
                    type="note"
                    class="alert alert-info"
                    label="STOMT_ID_LABEL"
                    description="STOMT_ID_DESCRIPTION"
                />

                <field 
                    name="stomt_id" 
                    type="text" 
                    default="" 
                    label="STOMT_ID" 
                    description="STOMT_ID_DESC"
                />

                <field 
                    name="stomt_label" 
                    type="text" 
                    default="Feedback" 
                    label="LABEL" 
                    description="LABEL_DESC"
                />

                <field
                    name="position" 
                    type="radio"
                    class="btn-group" 
                    default="right"
                    label="POSITION" 
                    description="POSITION_DESC"
                >
                    <option value="right">POSITION_RIGHT</option>
                    <option value="left">POSITION_LEFT</option>
                </field>

                <field 
                    name="color_text" 
                    type="color" 
                    label="COLOR_TEXT" 
                    default="#FFFFFF"
                    description="COLOR_TEXT_DESC"
                />

                <field
                    name="color_background" 
                    type="color" 
                    label="COLOR_BACKGROUND" 
                    default="#0091C9"
                    description="COLOR_BACK_DESC"
                />

                <field
                    name="color_hover" 
                    type="color" 
                    label="COLOR_HOVER" 
                    default="#04729E"
                    description="COLOR_HOVER_DESC"
                />

                <field 
                    name="preload"
                    type="radio"
                    class="btn-group" 
                    default="0"
                    label="PRELOAD"
                    description="PRELOAD_DESC"
                >
                    <option value="0">PRELOAD_FALSE</option>
                    <option value="1">PRELOAD_TRUE</option>
                </field>

            </fieldset>
        </fields>
    </config>
<updateservers>
        <server type="extension" name="Stomt Update Site">https://raw.githubusercontent.com/stomt/stomt-joomla-extension/master/manifest.xml</server>
    </updateservers>
  
</extension>
